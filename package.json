{
  "name": "hexant",
  "version": "0.10.2",
  "description": "Hexagonal Ants",
  "license": "MIT",
  "author": "Joshua T Corbin <jcorbin@wunjo.org>",
  "type": "module",
  "private": true,
  "main": "src/hexant.js",
  "scripts": {
    "test": "npm run lint -s && node test",
    "lint": "eslint .",
    "grammar": "nearleyc src/turmite/lang/grammar.ne -o src/turmite/lang/grammar.js",
    "serve": "snowpack dev",
    "build": "snowpack build --clean",
    "postinstall": "npm run grammar",
    "preversion": "bash scripts/preversion.sh",
    "version": "bash scripts/version.sh",
    "postversion": "bash scripts/postversion.sh"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "gl-matrix": "^2.3.2",
    "hexer": "1.4.5",
    "snowpack": "^3.8.8",
    "system": "1.0.4",
    "tape": "4.2.0"
  },
  "dependencies": {
    "Base64": "0.3.0",
    "blick": "1.1.0",
    "domready": "1.0.8",
    "global": "4.3.0",
    "gutentag": "^0.0.0",
    "hashbind": "2.1.0",
    "hsluv": "^0.1.0",
    "nearley": "^2.20.1",
    "rezult": "1.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "max-len": "off",
      "max-statements": "off",
      "no-console": "off",
      "one-var": "off"
    }
  },
  "translators": {
    "html": "gutentag/translate-html",
    "frag": "./translate-glsl",
    "vert": "./translate-glsl"
  }
}
