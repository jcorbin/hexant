{
  "name": "hexant",
  "version": "0.10.2",
  "description": "Hexagonal Ants",
  "license": "MIT",
  "author": "Joshua T Corbin <jcorbin@wunjo.org>",
  "type": "module",
  "private": true,
  "main": "src/hexant.js",
  "scripts": {
    "lint": "tsc",
    "generate": "node scripts/generate.js build",
    "generate-check": "node scripts/generate.js check -v",
    "ci": "npm run generate-check && npm run lint",
    "serve": "bash scripts/dev-server.sh",
    "build": "rollup -c",
    "preversion": "bash scripts/preversion.sh",
    "version": "bash scripts/version.sh",
    "postversion": "bash scripts/postversion.sh"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "glsl-deparser": "^1.0.0",
    "glsl-min-stream": "^1.0.0",
    "glsl-parser": "^2.0.1",
    "glsl-tokenizer": "^2.1.5",
    "http-server": "^14.1.0",
    "rollup": "^2.72.1",
    "tape": "4.2.0",
    "typescript": "^4.6.4"
  },
  "devServices": [
    "rollup -c -w",
    "http-server -o"
  ],
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "hsluv": "^0.1.0",
    "nearley": "^2.20.1"
